{
  "info": {
    "name": "Photo Studio API",
    "description": "API endpoints for Photo Studio Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api",
      "type": "string"
